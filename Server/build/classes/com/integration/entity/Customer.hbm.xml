<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.integration.entity.Customer" table="customer">
		<id name="customer_id" column="customer_id" type="int">
			<generator class="identity"> <!-- 主键id的生成方式为自增 -->
			</generator>
		</id>
		<property name="customername" column="customername" type="string"></property>
		<property name="identity_card" column="identity_card" type="string"></property>
		<property name="bank_card" column="bank_card" type="string"></property>
		<property name="mobile" column="mobile" type="string"></property>
		<property name="email" column="email" type="string"></property>
	</class>
</hibernate-mapping>